pipeline {

    agent any
    
    tools{
            maven 'localMaven'
          }  
    
    stages{
        stage('Build'){
            steps{
                    echo "inside build"
                    sh 'mvn clean package'
                  }

            post{
              success{
                echo "now archiving"
                archiveArtifacts artifacts: '**/target/*.jar'
              }
            }      
         }
        
       }
     }                           
